@model SqlConnector.Objects.Products


@using (Html.BeginForm())
{
    <h5>Вы уверены, что хотите удалить продукт @Html.Raw(ViewBag.Name) из списка?</h5>
    <div style="width:100%">
        <div class="form-group">
            @Html.Label("ProductGroupName:", new { @class = "col-form-label" })
            <p>  @Html.EditorFor(model => model.ProductGroupName, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("Product:", new { @class = "col-form-label" })
            <p>@Html.EditorFor(model => model.Product, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("Carbohydrates:", new { @class = "col-form-label" })
            <p>@Html.EditorFor(model => model.Carbohydrates, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("BreadUnits:", new { @class = "col-form-label" })
            <p>@Html.EditorFor(model => model.BreadUnits, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</p>
        </div>
        <div class="form-group">
            @Html.Label("GrammInUnit:", new { @class = "col-form-label" })
            <p>@Html.EditorFor(model => model.GrammInUnit, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })</p>
        </div>
        <div>
            <button class="btn btn-danger btn-lg btn-group" type="submit" style="float:right">Удалить</button>
        </div>
    </div>
}


