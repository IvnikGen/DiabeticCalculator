
@{
    AjaxOptions options = new AjaxOptions
    {
        UpdateTargetId = "BreadUnitTable",
        LoadingElementDuration = 1000,
        LoadingElementId = "loading"
    };
}
<!--Card-->
<div class="card mb-4 wow fadeIn">
    <div class="card-header" id="navProdGroup">Группы продуктов</div>
    <!--Card content-->
    <div class="scrollbar" id="style-3">
        <div class="force-overflow">
            <div class="card-body">
                <ul class="list-unstyled">
                    @foreach (var m in Model)
                    {
                        <li class="media my-4">
                            <a href="#BreadUnitTable"><img class="d-flex mr-3" src="/Images/@m.GroupImage" alt="@m.GroupName" style="width:100px; height:100px;"> </a>
                            <div class="media-body">
                                <h5>@m.GroupName<span class="pull-right"><i class="fa fa-arrow-circle-right"></i></span></h5>
                                @Ajax.ActionLink($"Отобразить в таблице", "GetTableData", "Home", new { groupName = $"{@m.GroupName}" }, options, new { @class = "mt-0 mb-1 font-weight-bold" })
                            </div>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </div>
</div>

<!--/.Card-->
<div id="loading" class="load" style="display:none">
    <p>Загрузка данных...</p>
</div>

<style>
    .scrollbar {
        margin-left: 30px;
        float: left;
        height: 600px;
        background: #F5F5F5;
        overflow-y: scroll;
        margin-bottom: 25px;
    }

    .force-overflow {
        min-height: 450px;
    }
    #style-3::-webkit-scrollbar-track {
        -webkit-box-shadow: inset 0 0 6px rgba(0,0,0,0.3);
        background-color: #F5F5F5;
    }

    #style-3::-webkit-scrollbar {
        width: 6px;
        background-color: #F5F5F5;
    }

    #style-3::-webkit-scrollbar-thumb {
        background-color: #000000;
    }
</style>

